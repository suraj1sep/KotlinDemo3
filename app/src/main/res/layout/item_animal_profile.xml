<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/edit_text"
            android:gravity="top|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight="0.85"
                android:orientation="vertical"
                android:padding="@dimen/size5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal Category "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_animalCat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 1"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal Breed Category "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_animalBreedCat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left|center"
                        android:text=": 1"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal Breed with blood level "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_animalBreedBldLvl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left|center"
                        android:text=": 1"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal Ear Tag No. "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_bull_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 1"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal age"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_animal_age"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 1"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Milk Yield of Animal "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_dob"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 11/11/1111"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Milk Yield of Dam "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_date_procurement"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 11/11/1111"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size3">

                <ImageView
                    android:id="@+id/iv_bullDell"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/size8"
                    android:tint="@color/colorPrimary"
                    card_view:srcCompat="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/iv_bullEdit"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/size8"
                    android:tint="@color/colorPrimary"
                    card_view:srcCompat="@drawable/ic_edit2" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
