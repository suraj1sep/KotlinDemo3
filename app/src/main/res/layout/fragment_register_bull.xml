<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="@dimen/size10">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size20">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.cdat.helper.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/size20"
                    app2:civ_border_color="@color/colorPrimary"
                    app2:civ_border_width="1dp"
                    app2:srcCompat="@drawable/ic_bull" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@android:drawable/ic_menu_edit" />
            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_bull_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bull No. *"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Breed with blood level "
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_breed_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Date of Birth *"
                android:textColor="@color/txt_secondary" />

            <TextView
                android:id="@+id/tv_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:gravity="center|left"
                android:padding="@dimen/size3"
                android:textColor="@color/txt_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Procurement Date *"
                android:textColor="@color/txt_secondary" />

            <TextView
                android:id="@+id/tv_ProcurementDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:gravity="center|left"
                android:padding="@dimen/size3"
                android:textColor="@color/txt_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_dam_milk_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DAM milk yield *"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_sire_dam_milk_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SIRE DAM milk yield *"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_bull_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bull Origin *"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_add"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>