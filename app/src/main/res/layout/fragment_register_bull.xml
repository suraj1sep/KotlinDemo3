<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="@dimen/size10">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size20">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/size10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_animalCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_down"
                    android:hint="@string/animal_cat"
                    android:imeOptions="actionNext"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/size10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_animalBreedCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_down"
                    android:hint="@string/animal_breed_cat"
                    android:imeOptions="actionNext"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/size10">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_animalBreedBloodLvl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_down"
                    android:hint="@string/animal_breed_blood_cat"
                    android:imeOptions="actionNext"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_bull_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bull_id_no"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Date of Birth *"
                android:textColor="@color/txt_secondary" />

            <TextView
                android:id="@+id/tv_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:gravity="center|left"
                android:padding="@dimen/size3"
                android:textColor="@color/txt_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Date of Procurement *"
                android:textColor="@color/txt_secondary" />

            <TextView
                android:id="@+id/tv_ProcurementDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:gravity="center|left"
                android:padding="@dimen/size3"
                android:textColor="@color/txt_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_dam_milk_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DAM milk yield *"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_sire_dam_milk_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SIRE DAM milk yield *"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_bull_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bull Origin *"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="70"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:background="@android:drawable/edit_text"
                    android:text="Add Photo" />

                <ImageView
                    android:id="@+id/iv_bull_photo"
                    app:srcCompat="@drawable/ic_error_img"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_marginTop="@dimen/size10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SAVE" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>