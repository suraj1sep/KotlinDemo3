<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/edit_text"
            android:gravity="top|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="@dimen/size5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Village Name "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_villName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": ABCD"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Farmer Name "
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_farmerName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": Abcd"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Animal Ear Tag No."
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_animalEarTagNo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 70"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Calf Gender"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_calfGender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": Male"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Calf DOB"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_calfDOB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 20/12/2018"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Calf WEight"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_calfWeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 70"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Calf DOB"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_bullOrigin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": 20/12/2018"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Calf Parent"
                        android:textColor="@color/txt_secondary"
                        android:textSize="@dimen/size12"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_calfParent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:text=": Abcd"
                        android:textColor="@color/txt_primary"
                        android:textSize="@dimen/size12"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="@dimen/size3">

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/size5"
                    android:tint="@color/colorPrimary"
                    card_view:srcCompat="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/size10"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/size5"
                    android:tint="@color/colorPrimary"
                    card_view:srcCompat="@drawable/ic_edit2" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
