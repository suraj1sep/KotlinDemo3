<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size20">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/remboy1"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size25"
                    app:srcCompat="@drawable/ic_login"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/size20"
                    android:textStyle="bold"
                    android:layout_marginEnd="70dp"
                    android:text="Login"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_registration"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/remboy10"
                android:layout_marginTop="@dimen/size20"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size25"
                    app:srcCompat="@drawable/ic_farmer"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/size20"
                    android:textStyle="bold"
                    android:layout_marginEnd="70dp"
                    android:text="Farmer Registration"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_contactUs"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/remboy4"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="@dimen/size20"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size25"
                    app:srcCompat="@drawable/ic_contactus"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contact Us"
                    android:gravity="center"
                    android:textSize="@dimen/size20"
                    android:layout_marginEnd="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_techSupport"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/remboy3"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="@dimen/size20"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size25"
                    app:srcCompat="@drawable/ic_tech_support"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Technical Support"
                    android:textColor="@color/white"
                    android:layout_marginEnd="70dp"
                    android:textSize="@dimen/size20"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_usrManual"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/remboy7"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="@dimen/size20"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size25"
                    app:srcCompat="@drawable/ic_user_manual"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/size20"
                    android:layout_marginEnd="70dp"
                    android:textStyle="bold"
                    android:text="User Manual"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>