<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Date Of Demand : "
                android:textColor="@color/txt_secondary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_date_demand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="23/10/2018"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Animal Category : "
                android:textColor="@color/txt_secondary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_animal_cate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Ankole"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Animal Breed with Blood leve :"
                android:textColor="@color/txt_secondary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_breed_blood_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="78"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="No of Straw :"
                android:textColor="@color/txt_secondary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_no_straw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="150"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Straw Opening Balance of Last Year :"
                android:textColor="@color/txt_secondary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_straw_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="120"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
