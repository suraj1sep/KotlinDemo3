<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="DAIC Name :"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_daic_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Pune DAIC"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="District :"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="Pune"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Year :"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="2018"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/size5"
            android:background="@color/txt_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="Animal Cate."
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Breed Cate."
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Breed With Blood level"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:gravity="center"
                android:text="Batch No."
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Straw Distributed"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/txt_primary" />

        <LinearLayout
            android:id="@+id/ll_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.66"
                android:gravity="center"
                android:text="Total"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />


            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:paddingRight="2dp" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.39"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/txt_primary"
                android:textSize="@dimen/size11"
                android:textStyle="normal" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_primary"
                android:paddingRight="2dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/txt_primary" />

    </LinearLayout>


</android.support.v7.widget.CardView>
