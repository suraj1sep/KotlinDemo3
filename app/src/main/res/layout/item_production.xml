<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/edit_text"
        android:gravity="top|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:padding="@dimen/size10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Mode"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": Purchase"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Production / Purchase Date "
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_productionDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": 11/12/2018"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Animal Category"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_animalCate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": abc"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Animal Breed Category"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_breedCate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": 80"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Animal Breed with Blood level"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_animalBrdBldLvl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": 80"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Bull ID No"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_bullRegVo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": 1"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Batch No"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_batchNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": A121"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="PT Bull Tested"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_ptBullTested"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": YES"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Straw Produced"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_strawProduced"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": 12"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size3"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Agency Name"
                    android:textColor="@color/txt_secondary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_agencyName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text=": abc agency"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size12"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/size5"
                android:tint="@color/colorPrimary"
                card_view:srcCompat="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/size5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/size5"
                card_view:srcCompat="@drawable/ic_edit2"
                android:tint="@color/colorPrimary" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
