<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="@dimen/size10">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size20">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Mode"
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Animal Category"
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_animal_cate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Animal Breed Category"
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_breed_cate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Animal Breed with Blood Level"
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_breed_blood_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Bull ID No."
                android:textColor="@color/txt_secondary" />

            <Spinner
                android:id="@+id/sp_bluu_reg_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />


            <TextView
                android:id="@+id/tv_lbl_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:text="Production / Purchase Date"
                android:textColor="@color/txt_secondary" />

            <TextView
                android:id="@+id/tv_Production_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:gravity="center|left"
                android:padding="@dimen/size3"
                android:textColor="@color/txt_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/txt_third" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_batch_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Batch No."
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_pt_bull_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PT Bulls Tested"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_straw_produced_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No. of Straw Produced"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_agency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:textColorHint="@color/txt_secondary">

                <EditText
                    android:id="@+id/et_agency_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Purchase Agency Name"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/txt_primary"
                    android:textSize="@dimen/size15" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btn_add"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SAVE" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>